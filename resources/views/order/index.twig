{% extends 'templates/app.twig' %}
{% set title = 'Checkout' %}
{% block content %}
  <div class="container">
    <form action="#" method="post">
      <div class="row">
        <div class="col-md-8">
          <form action="#" method="post">
            <div class="row">
              <div class="col-md-6">
                <h3 class="font-montserrat">Your Details:</h3><hr>
                <div class="form-group">
                  <label for="email" class="font-mono">Your Email:</label><br>
                  <input type="email" name="email" id="email" placeholder="Email..." class="form-control font-mono">
                </div>
                <div class="form-group">
                  <label for="name" class="font-mono">Full Name:</label><br>
                  <input type="text" name="name" id="name" placeholder="Full name..." class="form-control font-mono">
                </div>
              </div>
              <div class="col-md-6">
                <h3 class="font-montserrat">Shipping Address:</h3><hr>
                <div class="form-group">
                  <label for="address1" class="font-mono">Address Line 1</label><br>
                  <input type="text" name="address1" id="address1" placeholder="Address Line 1..." class="form-control font-mono">
                </div>
                <div class="form-group">
                  <label for="address2" class="font-mono">Address Line 2</label><br>
                  <input type="text" name="address2" id="address2" placeholder="Address Line 2..." class="form-control font-mono">
                </div>
                <div class="form-group">
                  <label for="city" class="font-mono">City</label><br>
                  <input type="text" name="city" id="city" placeholder="City..." class="form-control font-mono">
                </div>
                <div class="form-group">
                  <label for="postal_code" class="font-mono">Postal Code</label><br>
                  <input type="text" name="postal_code" id="postal_code" placeholder="Your postal code..." class="form-control font-mono">
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="col-md-4">
          <div class="well">
            <h4 class="font-montserrat">Your order:</h4><hr>
            {% include 'cart/partials/contents.twig' %}
            {% include 'cart/partials/summary.twig' %}
            <button type="submit" class="btn btn-default font-lato">Order!</button>
          </div>
        </div>
      </div>
    </form>
  </div>
{% endblock %}
